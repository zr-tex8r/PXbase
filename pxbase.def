\def\bxIfPrimitive#1{%
  \edef\bx@tmpa{\string#1}\edef\bx@tmpb{\meaning#1}%
  \ifx\bx@tmpa\bx@tmpb \expandafter\@firstoftwo
  \else \expandafter\@secondoftwo \fi}

